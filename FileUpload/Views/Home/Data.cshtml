@{
    ViewData["Title"] = "Data";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.13/datatables.min.css" />
}



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Uploaded Excel Data for User</h3>
            </div>
            <div class="panel-body">
                <table id="UsersTable" class="table table-striped table-bordered table-hover responsive" width="100%">
                    <thead class="thin-border-bottom">
                        <tr>
                            <th>Id</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Age</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        (function ($) {
            var generateCustomerTable = $("#UsersTable")
                .dataTable({
                    "ajax": {
                        "type": "POST",
                        "url": "/api/data",
                        "dataSrc": function (json) {
                            return json.data;
                        }
                    },
                    "aoColumns": [
                        { "data": "id" },
                        { "data": "firstName" },
                        { "data": "lastName" },
                        { "data": "age" },
                        { "data": "status" }
                    ],
                    "lengthMenu": [5, 10, 25, 50],
                    "scrollY": true, 
                    "scrollX": true,
                    "columns": [
                        { "searchable": false }, null, null, {"searchable": false }, null 
                    ],
                    "ordering": true,
                    "paging": true,
                    "pagingType": "full_numbers",
                    "pageLength": 5
                });
        })(jQuery);
    </script>
}
